<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/picwalllayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
         <ImageView
            android:id="@+id/arrow_info"
            android:layout_width="30dp" 
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/picwall"
            android:layout_width="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/more_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/more_03"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/nickname_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="20dp"
            android:text="安易晨"
            android:textColor="#ffffff"
            android:textSize="30dp"/>
         
    </RelativeLayout>
           <com.example.holawith.RoundImageView
               android:id="@+id/infoimg"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:src="@drawable/pic3"
               android:layout_marginTop="180dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="30dp"/>
           <Button
               android:id="@+id/attention"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/picwalllayout"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="60dp"
               android:background="@drawable/buttonbk"
               android:text="关注TA"
               android:textColor="#ffffff"
               android:textSize="14dp"/>
           <RelativeLayout
               android:id="@+id/info_signature"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/attention"
               android:layout_marginTop="20dp">
               <ImageView
                   android:id="@+id/icons15"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/tab_icons_03"
                   android:scaleType="centerCrop"
                   android:layout_marginLeft="20dp"/>
               <TextView
                   android:id="@+id/signature"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:layout_toRightOf="@+id/icons15"
                   android:layout_marginRight="20dp"
                   android:textSize="13dp"
                   android:textColor="#090909"
                   android:text="每一个不曾起舞的日子都是对生命的辜负，继续努力"
                   android:scrollbars="vertical"
                   android:singleLine="false"
                   android:scrollbarDefaultDelayBeforeFade="2000"/>
           </RelativeLayout>
           <View
               android:id="@+id/line"
               android:layout_below="@+id/info_signature"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#E0E0E0"/>
           <TextView
               android:id="@+id/info_atcion"
               android:layout_below="@+id/line"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TA发布的活动"
               android:textColor="#03A9F4"
               android:textSize="13dp"/>        
             <View
               android:id="@+id/line1"
               android:layout_below="@+id/info_atcion"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#E0E0E0"/>  
             <TextView
               android:id="@+id/info_note"
               android:layout_below="@+id/line1"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TA的攻略"
               android:textColor="#03A9F4"
               android:textSize="13dp"/> 
             <View
               android:id="@+id/line2"
               android:layout_below="@+id/info_note"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#E0E0E0"/> 
       </RelativeLayout>
