<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:focusable="true"  
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
        android:id="@+id/strategyban"
        android:layout_width="match_parent"
        android:background="#03A9F4"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/strategy_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:scaleType="centerCrop"/>
        <TextView 
            android:id="@+id/strategy_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/strategy_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="发布攻略"
            android:textColor="#ffffff"
            android:textSize="20dp"/>   
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="标题"
        android:textColor="#999999"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/strategy_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HolaWith线"
        android:textSize="20dp"
        android:textColor="#999999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
     <Spinner 
         android:id="@+id/kind"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
         android:text="内容"
         android:textColor="#999999"
         android:textSize="12dp"/>
     <EditText
         android:id="@+id/strategy_content"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:singleLine="false"
         android:scrollbars="vertical"
         android:scrollbarFadeDuration="2000"/>
      <RelativeLayout
          android:layout_marginTop="10dp"
          android:id="@+id/strategybuttonlayout"
          android:layout_width="match_parent"
          android:layout_height="50dp">
          <Button
                android:id="@+id/strategy_cancel"
                android:layout_width="120dp"
                android:layout_marginLeft="40dp"
                android:layout_height="30dp"
                android:background="@drawable/layoutbk"
                android:text="取消"
                android:textColor="#090909"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/strategy_spon"
                android:layout_width="120dp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/strategy_cancel"
                android:layout_alignBottom="@+id/strategy_cancel"
                android:background="@drawable/buttonbk"
                android:text="立即发布"
                android:textColor="#090909"
                android:textSize="15dp"/>
      </RelativeLayout>
      
</LinearLayout>
